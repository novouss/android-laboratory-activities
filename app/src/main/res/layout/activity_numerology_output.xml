<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumerologyOutput">

    <LinearLayout
        android:id="@+id/OuterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/scoreTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:paddingStart="16dp"
            android:text="You got..."
            android:textAlignment="center"
            android:textColor="@color/slate_blue"
            android:textSize="48sp"
            tools:ignore="HardcodedText,MissingConstraints,RtlSymmetry" />

        <TextView
            android:id="@+id/ScoreTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:paddingStart="16dp"
            android:text="@string/hello_world_title"
            android:textAlignment="center"
            android:textColor="@color/slate_blue"
            android:textSize="60sp"
            tools:ignore="HardcodedText,MissingConstraints,RtlSymmetry" />

        <TextView
            android:id="@+id/OutputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"

            android:text="@string/hello_world_title"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/OthersBtn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="See other personality types..."
            android:textAlignment="center"
            android:textColor="@color/slate_blue"
            android:textSize="18sp"
            tools:ignore="UsingOnClickInXml" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>